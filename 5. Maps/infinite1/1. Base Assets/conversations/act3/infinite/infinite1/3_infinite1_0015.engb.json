                    "text": "%PLAYER%",
                    "response": {
                        "text": "What's going on at this facility?",
                        "line": {
                            "soundtoplay": "voice/guardian/3_infinite1_015_021",
                            "text": "%JamesHudson%: This is the Infinite factory. It's a genetic assembly line where Apocalypse's soldiers are created.",
