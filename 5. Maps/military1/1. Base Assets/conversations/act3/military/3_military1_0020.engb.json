            "participant": {
                "name": "default",
                "line": {
                    "soundtoplay": "voice/profx/3_military1_020_010",
                    "text": "%ProfX%: I just received news from Emma Frost. You recall when Apocalypse attacked New York City, a number of top leaders fell into comas?",
                    "response": {
                        "text": "%BLANK%",
                        "line": {
                            "text": "%PLAYER%: Yes, it left the armed forces paralyzed. They still haven't fully recovered.",
                            "response": {
                                "text": "%BLANK%",
                                "line": {
                                    "soundtoplay": "voice/profx/3_military1_020_012",
                                    "text": "%ProfX%: Emma's discovered a temple that's housing former students of hers who are responsible for those comas. If we can disband this group, their victims should be released from their unnatural slumber.",
                                    "response": {
                                        "text": "%BLANK%",
                                        "line": {
                                            "soundtoplay": "voice/profx/3_military1_020_013",
                                            "text": "%ProfX%: To reach that location, use the X-Jet. If you'd like additional information, activate the mission computer for a full briefing.",
                                            "response": {
                                                "chosenscriptfile": "common/briefings/mark_briefing3_30",
                                                "tagjump": "autogen_tag_1",
                                                "text": "%BLANK%"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "startCondition": {
            "participant": {
                "name": "default",
                "line": {
                    "soundtoplay": "voice/profx/3_military1_020_030",
                    "soundtoplayb": "voice/profx/3_military1_020_031",
                    "text": "%ProfX%: Welcome, my friend. What can I do for you?",
                    "textb": "%ProfX%: Hello. How can I be of assistance?",
                    "response": {
